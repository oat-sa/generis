            "oat\\oatbox\\" : "common/oatbox/",
            "oat\\generis\\test\\": "test/",
            "oat\\generis\\scripts\\": "scripts/"
        },
        "files": [
        	"common/legacy/class.LegacyAutoLoader.php",
        	"common/constants.php"
    	]
    },

    "autoload-dev": {
        "psr-4": {
            "oat\\generis\\test\\": "generis/test/"
        }
    },

    "minimum-stability" : "dev"
}
